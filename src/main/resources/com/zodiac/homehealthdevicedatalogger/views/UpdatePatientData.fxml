<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zodiac.homehealthdevicedatalogger.Controllers.UpdatePatientController" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="400">
    <!-- Header -->
    <Label text="Update Patient Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Form -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints minWidth="200" />
        </columnConstraints>

        <!-- First Name -->
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="firstNameField" promptText="Enter First Name" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <!-- Last Name -->
        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="lastNameField" promptText="Enter Last Name" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <!-- Age -->
        <Label text="Age:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="ageField" promptText="Enter Age" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <!-- Phone -->
        <Label text="Phone Number:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="phoneField" promptText="Enter Phone Number" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <!-- Gender -->
        <Label text="Gender:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="genderField" promptText="Enter Gender" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" promptText="Enter Email" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <!-- Blood Group -->
        <Label text="Blood Group:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="bloodGroupField" promptText="Enter Blood Group" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Save" fx:id="saveButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
        <Button text="Cancel" fx:id="cancelButton" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
    </HBox>
</VBox>

